extends layout

block head-extras
  link(href='/css/home.css', rel='stylesheet')

block content

  include navbar

  .container
    .row.header
      .col-lg-4
        .thumbnail.text-center
          img.img-circle(src='#{large_photo}', width="200px")
          .h3
            span.fa.fa-twitter.fa-2x(style="color: rgb(29,202,255)")
            a(href="https://twitter.com/#{user.username}") @#{user.username}
          h3 #{user.name}
          if currentUser && (user.id !== currentUser.id)
            unless currentUser.isFollowing(user)
              button.btn.btn-info#follow(data-username=user.username) Follow
            else
              button.btn.btn-danger#unfollow(data-username=user.username) Unfollow

      .col-lg-8
        .text-center
          h3 Posts

          each val in posts
            .row.header
              .col-lg-10.col-lg-offset-1
                .thumbnail.text-center
                  a(href="/posts/#{val.slug}")
                    h4 #{val.title}
                  p #{val.content}









  include footer
