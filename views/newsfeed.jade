extends layout

block content

  link(href='/css/home.css', rel='stylesheet')
  include navbar

  .container
    .row.header
      .col-lg-4
        .thumbnail.text-center
          img.img-circle(src='#{large_photo}', width="200px")
          .h3
            span.fa.fa-twitter.fa-2x(style="color: rgb(29,202,255)")
            a(href="https://twitter.com/#{user.username}") @#{user.username}
          h3 #{user.name}
          button.btn.btn-info Follow

      .col-lg-8
        .text-center
          h3 NewsFeed

          h4 Jot Something new
            .row.header
              .col-lg-10.col-lg-offset-1
                .thumbnail.text-center
                  p placeholder composing here  --> improve this
                  input-group
                    .form-control-wrapper
                      textarea#textArea(rows="2", maxLength="117", tabindex="2", autofocus, placeholder="Introduce your tweetstorm. You can tag @username, paste links or use #hashtags.")

          h4 Your Feed
          each val in posts
            .row.header
              .col-lg-10.col-lg-offset-1
                .thumbnail.text-center
                  a(href="/posts/#{val.slug}")
                    h4 #{val.title}
                  p #{val.content}



  include footer
