head
  title Storming.ME
  meta(charset='UTF-8')
  meta(name='description', content='Hacking The Tweetstorm... With Pictures of Text.')

  // Twitter cards
  meta(name='twitter:card', content='summary_large_image')
  meta(name='twitter:image', content='')
  meta(name='twitter:title', content='Storming.ME')
