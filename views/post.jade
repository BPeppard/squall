extends layout

block content
  include navbar
  link(href='/css/medium-editor.min.css', rel='stylesheet')
  link(href='/css/flat.min.css', rel='stylesheet')

  .container
    .row.header.col-lg-10.col-lg-offset-1
      .col-lg-12
        .post-container
          .post-author
            a(href="/#{post.author}")
              img.author-image(src="#{avatar_url}")
              .author-name #{post.author}
          .post-body
            h1.post-title #{post.title}
            .post-content!= post.content
          .post-footer
            .post-meta
              .post-time #{post.created_at}
              .post-stats
                span.retweets
                  strong #{post.viewCount}
                  |  Views
            .post-social
              button.btn.btn-info.followuser
                span Follow
                  #author_name #{post.author}
              .tweet-button
                a(href='#')
                  i.fa.fa-twitter
                  |  Tweet This
              //
                .post-share
                  a(href='#')
                    i.fa.fa-facebook-official
                  a(href='#')
                    i.fa.fa-google-plus-square
                  a(href='#')
                    i.fa.fa-pinterest-square


  img#image(style="display:none")


  span#profileUsername(style="display:none") #{post.author}


  include footer
  script(src='/js/postscripter.js')
